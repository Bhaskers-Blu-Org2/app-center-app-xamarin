<?xml version="1.0" encoding="UTF-8"?>
<local:BasePage xmlns:local="clr-namespace:MobileCenterApp;" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MobileCenterApp.CreateDistributionGroupPage">
	<ContentPage.ToolbarItems>
		<ToolbarItem Name="Cancel" Command="{Binding CancelCommand}">
		</ToolbarItem>
	</ContentPage.ToolbarItems>
	<StackLayout>
		<Entry Text="{Binding Name}"/>
